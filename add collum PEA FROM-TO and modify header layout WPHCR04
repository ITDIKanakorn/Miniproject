    <script>
        function changeLanguage() {
            let lang = document.getElementById("languageSelect").value;

            if (lang === "th") {
                document.getElementById("wms-title").innerText = "‡∏£‡∏∞‡∏ö‡∏ö‡∏ö‡∏£‡∏¥‡∏´‡∏≤‡∏£‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏Ñ‡∏•‡∏±‡∏á‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤";
                document.getElementById("username").placeholder = "‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ";
                document.getElementById("password").placeholder = "‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô";
                document.getElementById("btn-login").innerText = "‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö";
            } else {
                document.getElementById("wms-title").innerText = "Warehouse Management System";
                document.getElementById("username").placeholder = "Username";
                document.getElementById("password").placeholder = "Password";
                document.getElementById("btn-login").innerText = "Login";
            }
        }

        function validateLogin() {
            let username = document.getElementById("username").value;
            let password = document.getElementById("password").value;

            // ‡∏Å‡∏≥‡∏´‡∏ô‡∏î Username ‡πÅ‡∏•‡∏∞ Password ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á
            const validUsername = "admin";
            const validPassword = "123456";

            if (username.trim() === "" || password.trim() === "") {
                alert("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡πÅ‡∏•‡∏∞‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô");
                return false; // ‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡∏ü‡∏≠‡∏£‡πå‡∏°‡∏™‡πà‡∏á‡πÑ‡∏õ‡∏ï‡πà‡∏≠
            }

            if (username !== validUsername || password !== validPassword) {
                alert("‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏´‡∏£‡∏∑‡∏≠‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á!");
                return false; // ‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡πÑ‡∏õ‡∏´‡∏ô‡πâ‡∏≤ Dashboard
            }

            // ‡∏ñ‡πâ‡∏≤‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡πÑ‡∏õ dashboard.html
            window.location.href = "dashboard.html";
            return false; // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£ reload ‡∏´‡∏ô‡πâ‡∏≤
        }
