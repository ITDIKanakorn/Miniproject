    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtHeight.setText("");
        txtWeight.setText("");
        lblResult.setText("");
        lblResult.setBackground(new java.awt.Color(255, 255, 255));
    }                                        

    private void btnExitActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int option = JOptionPane.showConfirmDialog(rootPane, "Do u want to Exit ?");
        if (option == JOptionPane.YES_OPTION) {
            System.exit(0);

        }
    }                                       

    private void btnComputeActionPerformed(java.awt.event.ActionEvent evt) {                                           
        DecimalFormat df = new DecimalFormat("#.#");
        float bmi = 0;
        String weights = txtWeight.getText();
        String heights = txtHeight.getText();
        if (weights.length() > 0 && heights.length() > 0){
            float weight = Float.parseFloat(weights);
            float height = Float.parseFloat(heights);
            bmi = weight / ((height / 100) * (height / 100));
            if (bmi >= 18.5 && bmi < 23) {
                lblResult.setText("normal");
                lblResult.setBackground(new java.awt.Color(102, 255, 102));
            } else if (bmi >= 23 && bmi < 25) {
                lblResult.setText("buxom");
                lblResult.setBackground(new java.awt.Color(255, 255, 102));
            } else if (bmi >= 25 && bmi < 30) {
                lblResult.setText("Obesity level 1");
                lblResult.setBackground(new java.awt.Color(255, 102, 204));
            } else if (bmi >= 30) {
                lblResult.setText("Obesity level 2");
                lblResult.setBackground(new java.awt.Color(246, 154, 205));
            } else {
                lblResult.setText("thin");
                lblResult.setBackground(new java.awt.Color(153, 255, 204));
            }
        } else {
            JOptionPane.showMessageDialog(rootPane, "Please fill out the information completely.");
        }
    }                                          

    private void txtWeightKeyTyped(java.awt.event.KeyEvent evt) {                                   
        char c = evt.getKeyChar();
        if (!((c >= '0') && (c <= '9') || (c == '.')
                || (c == java.awt.event.KeyEvent.VK_BACK_SPACE)
                || (c == java.awt.event.KeyEvent.VK_DELETE))) {
            getToolkit().beep();
            evt.consume();
        }
    }                                  

    private void txtHeightKeyTyped(java.awt.event.KeyEvent evt) {                                   
        char c = evt.getKeyChar();
        if (!((c >= '0') && (c <= '9') || (c == '.')
                || (c == java.awt.event.KeyEvent.VK_BACK_SPACE)
                || (c == java.awt.event.KeyEvent.VK_DELETE))) {
            getToolkit().beep();
            evt.consume();
        }
    }                                  

